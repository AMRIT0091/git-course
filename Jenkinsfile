pipeline {
  agent any
    stages {
      stage('UnitTest'){
        steps {
            echo"Hello, We are inside unittest,running unit stage"
       }
     }
    stage('build'){
       steps {
        echo "we are learining build, building the code nowe"
       }
     }
     stage('deploy'){
       steps {
        echo "we are deploying the app"
       }
     }
}
}
